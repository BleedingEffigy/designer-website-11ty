{% for item in collections.sections %}
  {% if item.data.type === 'register' %}
    <div id="register" class="w-full min-h-screen flex flex-col justify-center items-center bg-base-100"
          data-theme="luxury">
      <div class="self-center text-center w-full xl:w-1/3 px-4 sm:px:0">
        <h2 class="font-bold tracking-widest text-base-content text-4xl my-6">{{ item.data.title }}</h2>
        <div class="font-light text-base-content text-xl">
          {{ item.templateContent | safe }}
        </div>
        <form class="w-full max-w-lg my-20 mx-auto" action="#" method="post" id="registration-form" target="_blank" validate>
          <div class="flex items-center border-b border-purple-600 py-2">
            <div class="form-control text-base-content">
              <label class="label">
                <span class="label-text">Name</span>
              </label> 
              <input type="text" placeholder="name" class="input">
               <div class="form-control text-base-content">
                <label class="label">
                  <span class="label-text">Email</span>
                </label> 
                <input type="text" placeholder="email" class="input">
                <label class="label">
                  <span class="label-text">Subject</span>
                </label> 
                <select class="select select-bordered w-full max-w-xs text-base-content">
                  <option disabled="disabled" selected="selected">Which service?</option> 
                  <option>Website Design</option> 
                  <option>Growth Analytics Consultation</option> 
                  <option>WebApp Development</option>
                  <option>Mobile App Development</option>
                  <option>Other...</option>
                </select>
                <div class="form-control">
                  <label class="label">
                    <span class="label-text">Message</span>
                  </label> 
                  <textarea class="textarea h-24 textarea-bordered mb-4 text-base-content" placeholder="Your message..."></textarea>
                </div>

              </div>
            </div>
          </div>
          <label class="block text-base-content text-left px-2 my-4" for="gdpr_37169">
            <input class="leading-tight" type="checkbox" id="gdpr_37169" name="gdpr[37169]" value="Y" required>
            <span class="text-md font-light">
              I agree with the <a href="/privacy" class="underline hover:no-underline hover:text-purple-600" title="Privacy Policy" target="_blank">Privacy Policy</a>
            </span>
          </label>
          <button class='btn btn-lg btn-primary btn-wide rounded-full'>Submit</button>
        </form>
      </div>
    </div>
  {% endif %}
{% endfor %}