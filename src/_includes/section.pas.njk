{% for item in collections.sections %}
  {% if item.data.type === 'pas' %}
    <div id="about" class="w-full flex flex-col justify-center items-center py-12">
      <div class="self-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-xl font-medium prose">
          {{ item.templateContent | safe }}
        </div>
      </div>
      <div class="flex flex-row w-full justify-center sm:w-2/3 xl:w-1/2 px-4 sm:px:0 mt-5">
        <a class="btn btn-lg btn-primary shadow-md" href="#features">See How it Works</a>
      </div>
    </div>
  {% endif %}
{% endfor %}